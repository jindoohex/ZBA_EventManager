@page "{id:int}"
@using EventManagerLib.model
@model EventManager.Pages._Admin.EditModel
@{
}

@if (!string.IsNullOrWhiteSpace(@Model.ErrorMessage))
{

    <h2 class="alert-danger">@Model.ErrorMessage</h2> }
else
{
    <div class="edit-event-wrapper">

        <section>
            <div class="edit-event-form">

                <div class="edit-event-card-header" style="background-color: rgba(255, 220, 0, 0.25)">
                    <h1 class="edit-event-title-wrapper">Editorial Form</h1>
                </div>

                <div class="main-card">

                    <div class="edit-event-card-details">
                        <div class="details-card-body">
                            <h5 class="details-title">Important</h5>
                        </div>
                        <div class="details-card-body">
                            <p class="details-text">
                                You are about to <b>adjust or accomodate details</b> about an already <b>existing event</b>.
                            </p>
                        </div>
                    </div>

                    <div class="input-card-body">
                        <form  method="post" class="p-3" style="margin: -1.5rem;" >
                            <div class="form-group">
                                <label>Event name</label>
                                <input type="text" asp-for="@Model.Event.EventName" class="form-control" />
                            </div>

                            <div class="form-group">
                                <label>Event description</label>
                                <textarea col="120" asp-for="@Model.Event.EventDesc" class="form-control"></textarea>
                            </div>

                            <div class="form-group">
                                <label>Location:</label>
                                <select asp-for="@Model.Event.EventType" class="form-control">
                                    @foreach (var et in Enum.GetValues(typeof(Event.SpecificEventType)))
                                    {
                                        <option value="@et">@et</option>
                                    }
                                </select>
                            </div>

                            <div class="form-group">
                                <label>Date:</label>
                                <input type="date" asp-for="@Model.Event.Date" class="form-control" />
                            </div>

                            <div class="form-group">
                                <label>TimeFrom:</label>
                                <input type="datetime" asp-for="@Model.Event.TimeFrom" class="form-control" placeholder="hh/mm/ss" />
                            </div>

                            <div class="form-group">
                                <label>TimeTo:</label>
                                <input type="datetime" asp-for="@Model.Event.TimeTo" class="form-control" placeholder="hh/mm/ss" />
                            </div>

                            <div class="form-group">
                                <input type="submit" value="Edit Event" class="btn btn-primary">Save Changes<input/>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </section>

    </div>
}

