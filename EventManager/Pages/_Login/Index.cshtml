@page
@model EventManager.Pages._Login.IndexModel
@{
}

<style>

    .centered {
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
    }

    /*.text-center {
        font-family: cambria;
    }*/
</style>

<br />
<br />
<div class=" w-50 m-auto align-items-center centered">
    <div class="card-header">
        <form method="post">
            <br />
            <h1 class="text-center">LOGIN</h1>
            <div class="float-md-none">
                <br />
                <br />
                <input type="email" class="form-control" id="floatingInput" asp-for="Username" placeholder="Example@example.com">
                <br />
            </div>
            <div class="float-md-none">
                <input type="password" class="form-control" id="floatingPassword" asp-for="Password" placeholder="Password">
            </div>
            <br />
            <br />
            <button class="w-100 btn btn-lg btn-primary" type="submit">Sign in</button>
            <br />
        </form>
        <br />
        <br />
    </div>
</div>


