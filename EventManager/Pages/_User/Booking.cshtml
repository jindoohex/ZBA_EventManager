@page "{id:int}"

@model EventManager.Pages._User.BookingModel
@{
}

<div class="booking-content">

    <section>

        <div class="booking-form">


            <div class="booking-card-header" style="background-color: rgba(255, 220, 0, 0.25)">
                <h1 class="booking-title-wrapper">Make Your Reservation</h1>
            </div>


            <div class="main-card">

                <div class="card-event-details">
                    <div class="event-card-body">
                        <h5 class="event-card-title">Placeholder title for selected event</h5>
                        <p class="event-card-text">Lorem ipsum dolor sit amet, consectetur adipiscing elit, 
                            sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. 
                            Faucibus interdum posuere lorem ipsum dolor sit amet.</p>
                    </div>
                </div>

                <div class="input-card-body">

                    <form class="p-3" style="margin: -1.5rem;">

                        <div class="form-group">
                            <label for="numberOfAttendees">How many will attend the event:</label>
                            <select class="form-control" id="numberOfAttendees" asp-for="UserBooking.Capacity">
                                @foreach (var cp in Model.Capacity)
                                {
                                    <option value="@cp">@cp</option>
                                }
                                    
                            </select>
                        </div>

                        <div class="form-group">
                            <label for="seeAnotherField">Do you wish to upgrade to VIP?</label>
                            <select class="form-control" id="seeAnotherField" asp-for="@Model.UserBooking.Vip">
                                <option value="no">No</option>
                                <option value="yes">Yes</option>
                            </select>
                        </div>

                        <div class="form-group" id="otherFieldDiv">
                            <div class="row">
                                <div class="col-6">
                                    <label for="RegularOption">Number of regular meals:</label>
                                    <select class="form-control w-100" id="RegularOption" selected="1">
                                        <option value="1">1</option>
                                        <option value="2">2</option>
                                        <option value="3">3</option>
                                        <option value="4">4</option>
                                        <option value="5">5</option>
                                    </select>
                                </div>

                                <div class="col-6">
                                    <label for="VeganOption">Number of vegan meals:</label>
                                    <select class="form-control w-100" id="VeganOption" selected="1">
                                        <option value="1">1</option>
                                        <option value="2">2</option>
                                        <option value="3">3</option>
                                        <option value="4">4</option>
                                        <option value="5">5</option>
                                    </select>
                                </div>
                            </div>
                        </div>

                        <div class="form-group">
                            <label for="seeAnotherFieldGroup">Do you wish to reserve parking?</label>
                            <select class="form-control" id="seeAnotherFieldGroup">
                                <option value="no">No</option>
                                <option value="yes">Yes</option>
                            </select>
                        </div>

                        <div class="form-group" id="otherFieldGroupDiv">
                            <label for="otherField1">Provide your vehicular registration number:</label>
                            <input type="text" class="form-control" id="otherField1">
                        </div>

                    </form>

                </div>

                <div class="button-card-wrapper">

                    <form method="post">
                        <button class="btn btn-primary form-control w-75" type="submit">Confirm Booking</button>
                    </form>

                </div>

            </div>


        </div>

    </section>

</div>



<style>
    .booking-content {
    }

    .booking-form {
        position: relative;
        width: 100%;
        padding-right: 15px;
        padding-left: 15px;
